<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.mapper.UserRoleMapper">
    <resultMap id="userRoleRM" type="com.springboot.domain.UserRole">
        <result property="userId" column="user_id" />
        <result property="roleId" column="role_id" />
    </resultMap>
    
    <select id="find" parameterType="com.springboot.domain.UserRole" resultMap="userRoleRM">
        SELECT user_id, role_id
        FROM sys_user_role
        WHERE 1=1
    </select>
    
    <insert id="insert" parameterType="com.springboot.domain.UserRole" >
		insert into sys_user_role
			(	
				user_id,
				role_id
			)
		values
			(	
			 	#{userId},
			 	#{roleId}
	 	     )
	</insert>
	
	<delete id="deleteByUserId" parameterType="int">
		delete from sys_user_role
		where user_id = #{userId}
	</delete>
	
	<delete id="deleteByRoleId" parameterType="int">
		delete from sys_user_role
		where role_id = #{roleId}
	</delete>
</mapper> 