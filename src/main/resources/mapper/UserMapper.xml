<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.mapper.UserMapper">
    <resultMap id="userRM" type="com.springboot.domain.User">
        <id property="id" column="id" />
        <result property="userName" column="user_name" />
        <result property="passWord" column="pass_word" />
    </resultMap>
    
    <select id="find" parameterType="com.springboot.domain.User" resultMap="userRM">
        SELECT id, user_name
        FROM sys_user
        WHERE 1=1
    </select>
    
    <select id="get" parameterType="int" resultMap="userRM">
        SELECT id, user_name, pass_word
        FROM sys_user
        WHERE id = #{id}
    </select>
    
    <select id="doLogin" parameterType="com.springboot.domain.User" resultMap="userRM">
        SELECT id, user_name
        FROM sys_user
        WHERE user_name = #{userName} and pass_word = #{passWord}
    </select>
    
    <insert id="insert" parameterType="com.springboot.domain.User" >
		insert into sys_user
			(	
				user_name,
				pass_word
			)
		values
			(	
			 	#{userName},
			 	#{passWord}
	 	     )
	</insert>
	
	<update id="update" parameterType="com.springboot.domain.User" >
		update sys_user
		<set>
			<if test="userName != null">
				user_name = #{userName},
			</if>
			<if test="passWord != null">
				pass_word = #{passWord}
			</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="deleteById" parameterType="int">
		delete from sys_user
		where id = #{id}
	</delete>
	
	<delete id="delete" parameterType="int">
		delete from sys_user
		where id in
		<foreach collection="array" item="id" open="(" close=")" separator=",">
			#{id}
		</foreach>
	</delete>
</mapper> 